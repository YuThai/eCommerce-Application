# ==================== ENVIRONMENT VARIABLES FOR RENDER.COM ====================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ==================== DATABASE CONFIGURATION ====================
# PostgreSQL credentials from Render dashboard
DB_HOST=your-postgres-host.render.internal
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_db_user
DB_PASSWORD=your_secure_database_password

# ==================== JWT SECURITY ====================
# Generate a strong secret key
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-minimum-32-characters
JWT_ACCESS_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=604800000

# ==================== ADMIN CREDENTIALS ====================
ADMIN_PASSWORD=secure_admin_password_here

# ==================== CORS & DEPLOYMENT ====================
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com,https://frontend-render-url.onrender.com
FRONTEND_URL=https://yourdomain.com

# ==================== PORT ====================
PORT=8080

# ==================== SPRING PROFILES ====================
SPRING_PROFILES_ACTIVE=prod
