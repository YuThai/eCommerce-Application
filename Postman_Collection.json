    {
      "name": "üîå Middleware Integration (ADMIN)",
      "item": [
        {
          "name": "1. Generate Middleware Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('middlewareToken', jsonData.token);",
                  "    ",
                  "    pm.test('‚úì Middleware token generated', function () {",
                  "        pm.expect(jsonData.token).to.exist;",
                  "        pm.expect(jsonData.tokenType).to.equal('Bearer');",
                  "        pm.expect(jsonData.expiresIn).to.equal(900000);",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"middleware-service@example.com\",\n  \"scopes\": [\"READ_PRODUCTS\", \"READ_ORDERS\", \"WRITE_REVIEWS\"]\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/ecom/auth/middleware-token",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "ecom",
                "auth",
                "middleware-token"
              ]
            }
          }
        },
        {
          "name": "2. Use Middleware Token - Get Products",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('‚úì Middleware token works with API', function () {",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 400, 404]); // API exists",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{middlewareToken}}"
              }
            ],
            "url": {
