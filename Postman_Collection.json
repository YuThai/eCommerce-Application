        {
          "name": "4. Refresh Access Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('accessToken', jsonData.accessToken);",
                  "    ",
                  "    pm.test('‚úì Token refreshed successfully', function () {",
                  "        pm.expect(pm.response.code).to.equal(200);",
                  "        pm.expect(jsonData.accessToken).to.exist;",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/ecom/auth/refresh",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "ecom",
                "auth",
                "refresh"
              ]
            }
          }
        },
        {
          "name": "5. Logout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('‚úì Logout successful', function () {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/ecom/auth/logout",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "ecom",
                "auth",
                "logout"
              ]
            }
          }
        }
