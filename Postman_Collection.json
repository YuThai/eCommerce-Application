  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "1. Register New User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('userId', jsonData.id);",
                  "    pm.test('User registration successful', function () {",
                  "        pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Password123!\",\n  \"name\": \"Test User\",\n  \"phone\": \"1234567890\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/ecom/customers",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "ecom",
                "customers"
              ]
            }
          }
        },
        {
          "name": "2. Login - Get Tokens",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('accessToken', jsonData.accessToken);",
                  "    pm.environment.set('refreshToken', jsonData.refreshToken);",
                  "    pm.environment.set('userId', jsonData.userId);",
                  "    pm.environment.set('tokenExpiry', new Date().getTime() + jsonData.expiresIn);",
                  "    ",
                  "    pm.test('‚úì Login successful', function () {",
                  "        pm.expect(pm.response.code).to.equal(200);",
                  "        pm.expect(jsonData.accessToken).to.exist;",
                  "        pm.expect(jsonData.refreshToken).to.exist;",
                  "    });",
                  "    ",
                  "    pm.test('‚úì Token validity correct', function () {",
                  "        pm.expect(jsonData.expiresIn).to.equal(900000); // 15 minutes",
                  "        pm.expect(jsonData.refreshExpiresIn).to.equal(604800000); // 7 days",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"Password123!\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/ecom/auth/login",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "ecom",
                "auth",
                "login"
              ]
            }
          }
        },
        {
          "name": "3. Get Current User Profile",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('‚úì User profile retrieved', function () {",
                  "    pm.expect(pm.response.code).to.equal(200);",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.email).to.exist;",
                  "    pm.expect(jsonData.role).to.exist;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/ecom/auth/me",
              "host": [
                "{{BASE_URL}}"
